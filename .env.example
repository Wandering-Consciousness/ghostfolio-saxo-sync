# Saxo Bank Configuration
SAXO_APP_KEY=your_Saxo_app_key_here
SAXO_APP_SECRET=your_Saxo_app_secret_here
SAXO_REDIRECT_URI=http://localhost:5000/callback

# Saxo OAuth Tokens (will be auto-generated and refreshed)
SAXO_ACCESS_TOKEN=
SAXO_REFRESH_TOKEN=
SAXO_TOKEN_EXPIRY=

# Disable interactive authentication (set to true for server/automated environments)
# This prevents the app from trying to open a browser and bind to a port
DISABLE_INTERACTIVE_AUTH=false

# Saxo Account Configuration
SAXO_ACCOUNT_KEY=

# Ghostfolio Configuration
GHOST_HOST=https://your-ghostfolio-instance.com
GHOST_KEY=your_ghostfolio_access_token_here
GHOST_ACCOUNT_NAME=Saxo Bank
GHOST_CURRENCY=USD
GHOST_SAXO_PLATFORM=

# Operation Mode
# SYNCSAXO (default) - Sync Saxo data to Ghostfolio
# DELETE_ALL_ACTS - Delete all activities for the account
# GET_ALL_ACTS - List all activities for the account
OPERATION=SYNCSAXO

# Cron schedule (leave empty for one-time run)
# Examples:
#   */15 * * * * - Every 15 minutes
#   0 */6 * * * - Every 6 hours
#   0 0 * * * - Daily at midnight
CRON=*/15 * * * *

# Logging
LOG_LEVEL=INFO
